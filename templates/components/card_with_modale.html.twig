{% set card_text_secondary = card_text_secondary ?? null %}
{% set card_action_label = card_action_label ?? 'En savoir plus' %}

<div class="card focusable-card mb-3"
     data-bs-toggle="modal"
     data-bs-target="#{{ modal_target }}"
>
    <img src="{{ card_image }}"
         alt="{{ card_title }}"
         class="card-img-top"
         loading="lazy"
    >
    <div class="card-body">
        <h5 class="card-title text-is-bold">{{ card_title }}</h5>
        <p class="card-text">
            {{ card_text }}
            <br>
            <a href="#" title="En savoir plus" class="pe-none">{{ card_action_label }}</a>
        </p>

        {% if card_text_secondary %}
            <p class="card-text">
                <small class="text-secondary">{{ card_text_secondary }}</small>
            </p>
        {% endif %}
    </div>
</div>

{% include 'components/modal.html.twig' with {
    modal_title: card_title,
} %}
